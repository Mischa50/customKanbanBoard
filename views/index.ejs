<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Kanban</title>
        <link rel="stylesheet" href="style.css" />
    </head>
    <header class="menu-bar">
        <h1 class="logo"><a href="/">Kanban</a></h1>
        <img id="trashCan" class="trash-can" src="img/trash.png" alt="trash">
        <div class="logout">
            <form action="/logout?_method=DELETE" method="POST">
              <button type="submit">Log Out</button>
            </form>
          </div>
    </header>
    <body>
        <div class="board-column">
            <div class="backlog column1" id="1">
                <h3>BACKLOG</h3>
                <form class="todo-form" id="1">
                    <input type="text" />
                    <button class="submit-button" type="submit"></button>
                </form>
            </div>

            <div class="doing column2" id="2">
                <h3>DOING</h3>
                <form class="todo-form" id="2">
                    <input type="text" />
                    <button class="submit-button" type="submit"></button>
                </form>
            </div>
            <div class="review column3" id="3">
                <h3>REVIEW</h3>
                <form class="todo-form" id="3">
                    <input type="text" />
                    <button class="submit-button" type="submit"></button>
                </form>
            </div>
            <div class="done column4" id="4">
                <h3>DONE</h3>
                <form class="todo-form" id="4">
                    <input type="text" />
                    <button class="submit-button" type="submit"></button>
                </form>

                <script src="script.js"></script>
            </div>
        </div>
    </body>
    <footer></footer>
</html>